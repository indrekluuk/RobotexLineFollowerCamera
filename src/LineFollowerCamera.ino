void processFrame() {

  cameraOV7670.waitForVsync();

  uint8_t cameraPixelRowCount = cameraOV7670.getLineCount();

  uint8_t pixelRowIndex = 0;
  scanLine = screen_w;

  while (pixelRowIndex < cameraPixelRowCount) {
    cameraOV7670.readLine();
    sendLineBufferToDisplay();
    pixelRowIndex++;
  }


}







